<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".WebDev">

    <TextView
            android:text="@string/web_dev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="53sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#FFC107"
            android:background="#DD2C00"
            android:id="@+id/textView"/>


<!--    Ist-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#ffff00"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/htmlCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/html"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"

                    android:id="@+id/htmltxt"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/cssCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/css"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"

                    android:id="@+id/csstxt"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

<!--    second-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#ffff00"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/jsCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/javascript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="39sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/jstxt"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/reactjsCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/reactjs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/reactjstxt"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

<!--    third-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#ffff00"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/expressjsCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/expressjs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="39sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"

                    android:id="@+id/expressjstxt"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/nodejsCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/nodejs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/nodejstxt"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

<!--    fourth-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="#ffff00"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/mongodbCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/mongodb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="39sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/mongodbtxt"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:backgroundTint="#ff0000"
                android:id="@+id/gitCard"
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_margin="10sp"
                android:layout_height="100dp">

            <TextView
                    android:text="@string/git"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/gittxt"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <Button
            android:text="@string/best_resource_to_learn"
            android:textSize="29sp"
            android:textColor="#017E36"
            android:backgroundTint="#FF8181"
            android:layout_margin="10sp"
            android:layout_width="417dp"
            android:layout_gravity="center"
            android:layout_height="80sp"
            android:id="@+id/bestResourceWebDev"/>

</LinearLayout>